<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.vgil.model.DesignationMaster" table="DESIGNATION_MASTER"
		lazy="false">
		<cache usage="read-write" />
		<id name="designation_id" type="string">
			<column name="designation_id"  length ="10"/>
			<generator class="identity" />
		</id>
		
		
		<property name="serial_no" type ="int">
			<column name="serial_no" />
		</property>
		
		<property name="designation_name" type="string">
			<column name="designation_name" length="50" />
		</property>	
		
	</class>
</hibernate-mapping>
